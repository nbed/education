{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"traceResolution": false,
		"target": "es2017",
		"noImplicitAny": true,
		"downlevelIteration": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": false,
		"strict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"lib": [
			"es2017",
			"es2015.promise",
			"dom"
		]
	},
	"include": [
		"**/*.ts",
	],
	"exclude": [],
}
